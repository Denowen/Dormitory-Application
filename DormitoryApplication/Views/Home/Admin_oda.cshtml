@{
    ViewData["Title"] = "Admin Oda Seçenekleri";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Oda Seçenekleri </title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/Admin_oda.css" />

</head>
<body>
    <div class="page">
        <div class="sidebar">
            <div class="logo_bar">
               <div class="logo_img"><img src="/img/iu_logo-beyaz.png"></div>
               <div class="logo_name">Dormitory Application</div> 
            </div>
            
            <ul class="nav_list">
                <li>
                    <a href="/Home/Admin_yurt_secenekler">
                        <span class="links_name">Yurt Seçenekleri</span>
                    </a>
                    <span class="tooltip">Yurt Seçenekleri</span>
                </li>
                <li>
                    <a href="/Home/Admin_oda">
                        <span class="links_name">Oda Seçenekleri</span>
                    </a>
                    <span class="tooltip">Oda Seçenekleri</span>
                </li>
                <li>
                    <a href="/Home/Admin_talepler">
                        <span class="links_name">Talepleri Görüntüle</span>
                    </a>
                    <span class="tooltip">Talepleri Görüntüle</span>
                </li>
            </ul>
            <div class="profile_content">
                <div class="name">Mert Berkan Akdeniz</div>
                <div class="logout"><a href="/Home/Giris" id="logout"><i class="fa fa-sign-out" style="font-size:20px"></i></a> </div>
            </div>
        </div>
        <div class="home_content">
            <form class="oda_sil">
            <div class="home1">
                <div class="yurtlar" id="mavi">
                    <div class="headerr"><h1>Oda Sil</h1></div>
                    
                    <ul class="responsive-table" style="overflow: scroll; max-height: 30rem;">
                        <li class="table-header">
                          <div class="col col-1">Oda Numarası</div>
                          <div class="col col-2">Yurt Tipi</div>
                          <div class="col col-3">Kapasite</div>
                          <div class="col col-4">Seç</div>
                        </li>
                        @model IEnumerable<AllDorms>
                         @foreach (var item in Model)
                            {
                            <li class="table-row">
                            <div class="col col-1" data-label="oda">@item.DormNo</div>
                            <div class="col col-2" data-label="yurt">@item.DormTypeName</div>
                            <div class="col col-3" data-label="kapasite">@item.Capacity</div>
                            <input class="sec" name="radio_but" type="radio">
                          </li>  
                            }
                            
                         
                      </ul>
                      <div class="sbmt_bt">
                        <input type="submit" class="btn" value="SİL">  
                      </div>
                      
                </div>
            </div>
        </form>

        <form class="oda_ekle" action="/Home/Add_Room" method="POST">
            <div class="home2">
                <h1>Oda Ekle</h1>
                <div class="input-div five">
                    <input class="input" name="DormNo" placeholder="Oda No" type="text">
                </div>
                <div class="input-div two">
                    <input class="input" name="Capacity"placeholder="Kapasite" type="number">
                </div>
                <div class="input-div six">
                    <input class="input" name="DormTypeId" placeholder="Yurt Id" type="text">
                </div>
                <div class="input-div three">
                    <input class="input" name="DormTypeName" placeholder="Yurt tipi" type="text">
                </div>
                <div class="input-div four">
                    <input class="input" name="Price" placeholder="Ücret" type="number">
                </div>
                <div class="sbmt_bt2">
                    <input type="submit" class="btn2" value="EKLE">  
                  </div>
            </div>
        </form>

        </div>
    </div>
</body>
</html>
    
